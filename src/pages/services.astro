---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Servicios" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Servicios</div>
  </div>

  <HorizontalCard
    title="Desarrollador Backend"
    img="/Backend-img.webp"
    desc="Especializado en la creación de APIs RESTful, gestión de bases de datos, seguridad, escalabilidad, rendimiento y más utilizando Node.js."
    url="#"
    badge="Especialidad"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Desarrollador Fullstack"
    img="/full_stack_banner.webp"
    desc="Si bien mi especialidad es el backend, también tengo experiencia en el desarrollo de aplicaciones web completas."
    url="#"
    badge="Experiencia"
  />
</BaseLayout>
