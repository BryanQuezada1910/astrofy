---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Servicios" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services</div>
  </div>

  <HorizontalCard
    title="Backend Developer"
    img="/Backend-img.webp"
    desc="Specialized in creating RESTful APIs, database management, security, scalability, performance, and more."
    url="#"
    badge="Specialty"
/>
<div class="divider my-0"></div>
<HorizontalCard
    title="Fullstack Developer"
    img="/full_stack_banner.webp"
    desc="While my specialty is backend, I also have experience in developing complete web applications."
    url="#"
    badge="Experience"
/>

</BaseLayout>
